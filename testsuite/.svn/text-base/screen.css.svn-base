@charset "utf8";

body {
	margin: 0px auto;
	padding: 1em;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 100.01%;
}

.right {
	text-align: right;
}

form {

	margin: 0.4em auto;
	padding: 0.5em;
	position: relative;
	border: 0;
}

h1, h2, h3, p {
	padding: 5px 0;
}

textarea {
	width: 99%;
	margin: 0 auto;
	position: relative;
	font-family: 'Courier new', Corier, fixed;
	font-size: 0.8em;
}
